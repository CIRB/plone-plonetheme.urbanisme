<?xml version="1.0"?>
<object>
  <order manager="plone.portalheader" skinname="Urbanisme Theme" based-on="Sunburst Theme">	  
    <viewlet name="urbanisme.quicklinks" insert-before="*" />
    <viewlet name="urbanisme.logo" insert-after="urbanisme.quicklinks" />
    <viewlet name="urbanisme.searchbox" insert-after="urbanisme.logo" />
    <viewlet name="plone.global_sections" />
    <viewlet name="plone.global_sections" />
    <viewlet name="urbanisme.languageselector" insert-after="*" />
    <viewlet name="plone.path_bar" insert-after="urbanisme.languageselector" />
  </order>

  <order manager="plone.portalfooter" skiname="Urbanisme Theme" based-on="Sunburst Theme">
    <viewlet name="plone.colophon" insert-after="*" />
    
  </order>
 
<!-- hidden viewlets -->
 
  <hidden manager="plone.portalheader" skinname="Urbanisme Theme" based-on="Sunburst Theme">
    <viewlet name="plone.logo" /> 
    <viewlet name="plone.personal_bar" />
    <viewlet name="plone.app.i18n.locales.languageselector"  /> 
    <viewlet name="plone.searchbox" />
  </hidden>

  <hidden manager="plone.abovecontent" skinname="Urbanisme Theme" based-on="Sunburst Theme">
    <viewlet name="plone.path_bar" />    
  </hidden>


  <hidden manager="plone.portalfooter" skinname="Urbanisme Theme" based-on="Sunburst Theme">
    <viewlet name="plone.site_actions" />    
  </hidden>

</object>
